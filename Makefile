# Helpers

.PHONY: clean-debug clean-release clean

clean-debug:
	rm -rf $(DEBUG_BUILD)

clean-release:
	rm -rf $(RELEASE_BUILD)

clean:
	rm -rf $(BUILD)

deps: $(DEBUG_DEPFILE) $(RELEASE_DEPFILE)
