	$(CXX_LINK_SHARED_RELEASE) $(RELEASE_BUILD)/libjasmine.so $(RT_RELEASE_OBJS) $(UTIL_RELEASE_OBJS) $(ASM_RELEASE_OBJS) $(JASMINE_RELEASE_OBJS) $(JASMINE_RELEASE_RULES_OBJ)

