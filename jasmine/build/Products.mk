# Sources

JASMINE_SRC_ROOT := $(JASMINE_PATH)

JASMINE_CXX_HEADERS := $(wildcard $(JASMINE_SRC_ROOT)/*.h)
JASMINE_CXX_SOURCES := $(wildcard $(JASMINE_SRC_ROOT)/*.cpp) $(wildcard $(JASMINE_SRC_ROOT)/pass/*.cpp)
JASMINE_MATCHER_CXX_SOURCES := $(wildcard $(JASMINE_SRC_ROOT)/matcher/*.cpp)
JASMINE_RULES_SOURCES := $(wildcard $(JASMINE_SRC_ROOT)/rules/*.rules)

JASMINE_DEBUG_OBJS := \
	$(JASMINE_CXX_SOURCES:%.cpp=$(DEBUG_BUILD)/%.o)
JASMINE_RELEASE_OBJS := \
	$(JASMINE_CXX_SOURCES:%.cpp=$(RELEASE_BUILD)/%.o)
JASMINE_MATCHER_DEBUG_OBJS := \
	$(JASMINE_MATCHER_CXX_SOURCES:%.cpp=$(DEBUG_BUILD)/%.o)
JASMINE_MATCHER_RELEASE_OBJS := \
	$(JASMINE_MATCHER_CXX_SOURCES:%.cpp=$(RELEASE_BUILD)/%.o)
JASMINE_DEBUG_RULES_OBJ := $(DEBUG_BUILD)/$(JASMINE_PATH)/rules.o
JASMINE_RELEASE_RULES_OBJ := $(RELEASE_BUILD)/$(JASMINE_PATH)/rules.o
JASMINE_DEBUG_HEADERS := $(JASMINE_CXX_HEADERS:%.h=$(DEBUG_BUILD)/include/%.h)
JASMINE_RELEASE_HEADERS := $(JASMINE_CXX_HEADERS:%.h=$(RELEASE_BUILD)/include/%.h)
JASMINE_DEBUG_DEPFILES := $(JASMINE_CXX_SOURCES:%.cpp=$(DEBUG_BUILD)/%.d) $(JASMINE_MATCHER_CXX_SOURCES:%.cpp=$(DEBUG_BUILD)/%.d)
JASMINE_RELEASE_DEPFILES := $(JASMINE_CXX_SOURCES:%.cpp=$(RELEASE_BUILD)/%.d) $(JASMINE_MATCHER_CXX_SOURCES:%.cpp=$(RELEASE_BUILD)/%.d)

JASMINE_TEST_SOURCES := $(wildcard $(JASMINE_SRC_ROOT)/test/*.cpp)
JASMINE_TEST_DEBUG_OBJS := $(JASMINE_TEST_SOURCES:%.cpp=$(DEBUG_BUILD)/%.o)
JASMINE_TEST_RELEASE_OBJS := $(JASMINE_TEST_SOURCES:%.cpp=$(RELEASE_BUILD)/%.o)

JASMINE_DIRS_DEBUG := \
	$(DEBUG_BUILD)/$(JASMINE_PATH)/test \
	$(DEBUG_BUILD)/$(JASMINE_PATH)/pass \
	$(DEBUG_BUILD)/$(JASMINE_PATH)/matcher \
	$(DEBUG_BUILD)/include/$(JASMINE_PATH)/pass \
	$(DEBUG_BUILD)/include/$(JASMINE_PATH)/matcher
JASMINE_DIRS_RELEASE := \
	$(RELEASE_BUILD)/$(JASMINE_PATH)/test \
	$(RELEASE_BUILD)/$(JASMINE_PATH)/pass \
	$(RELEASE_BUILD)/$(JASMINE_PATH)/matcher \
	$(RELEASE_BUILD)/include/$(JASMINE_PATH)/pass \
	$(RELEASE_BUILD)/include/$(JASMINE_PATH)/matcher

$(DEBUG_BUILD)/include/%.h: %.h
	cp $< $@

$(RELEASE_BUILD)/include/%.h: %.h
	cp $< $@
